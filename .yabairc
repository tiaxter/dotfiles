# set window border
yabai -m config window_border on
# set window border width
yabai -m config window_border_width 2
# set window border color
yabai -m config active_window_border_color 0xff775759

# set config layout to bsp
yabai -m config layout bsp

# arrange new windows following the layout
yabai -m config window_placement second_child

# windows padding
yabai -m config top_padding 12
yabai -m config bottom_padding 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config window_gap 12

# mouse follow focused window
yabai -m config mouse_follows_focus on

# when window is dropped then swap it
yabai -m mouse_drop_action swap

# make JetBrains products popup windows float
apps='^(IntelliJ IDEA|WebStorm|GoLand|PyCharm|PhpStorm)$'
yabai -m rule --add app="JetBrains Toolbox" manage=off
yabai -m rule --add app="${apps}" manage=off
yabai -m rule --add app="${apps}" title="( â€“ )" manage=on
